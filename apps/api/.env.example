# =============================================================================
# API SERVER - Local Development
# =============================================================================

# Server
NODE_ENV=development
API_PORT=3001
API_HOST=0.0.0.0
API_PREFIX=api/v1
LOG_LEVEL=debug

# Database (PostgreSQL)
DATABASE_URL="postgresql://asforces:password@localhost:5432/asforces_dev?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars-long-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-at-least-32-chars-long-change-in-production
REFRESH_TOKEN_EXPIRES_IN=30d

# Argon2 (Password Hashing)
ARGON2_MEMORY=65536
ARGON2_ITERATIONS=3
ARGON2_PARALLELISM=4

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3002
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Redis (Optional - for rate limiting and caching)
REDIS_URL="redis://localhost:6379"

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM="AsforceS Voice <noreply@asforces.com>"
WEB_APP_URL=http://localhost:3000

# Feature Flags
FEATURE_EMAIL_VERIFICATION_REQUIRED=false
FEATURE_2FA_ENABLED=true
FEATURE_REGISTRATION_ENABLED=true
